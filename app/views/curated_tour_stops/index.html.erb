<% title 'Curated Tours' %>
<% description 'Curated Tours | Let hand-picked curators show you around telephone game | TELEPHONE: An International Arts Experience Presented by Satellite Collective' %>
<% keywords 'art, game, international, experiment, nathan langston, daniel talsky, satellite collective' %>
<h1>Curated Tour Stops</h1>

<table>
  <thead>
    <tr>
      <th>Tour</th>
      <th>Stop #</th>
      <th>Caption Text</th>     
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @curated_tour_stops.each do |curated_tour_stop| %>
      <tr>
        <td><%= curated_tour_stop.curated_tour.tour_name %></td>
        <td><%= curated_tour_stop.sequential_id %></td>
        <td><%= truncate(curated_tour_stop.caption_text, length: 35, omission: '...') %></td>
        <td><%= link_to 'Show', curated_tour_stop %></td>
      </tr>
    <% end %>
  </tbody>
</table>
