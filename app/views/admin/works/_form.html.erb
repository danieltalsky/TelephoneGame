    <%= f.collection_select :parent_id, Work.all(:order => "title"), :id, :title, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :artist_id %><br>
    <%= f.collection_select :artist_id, Artist.all(:order => "name"), :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :medium %><br>
    <%= f.text_area :medium %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
