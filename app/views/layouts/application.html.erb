<!DOCTYPE html>
<html>
<head>
  <% set_meta_tags :publisher => 'https://plus.google.com/+SatellitecollectiveOrgNYC' %>
  <%= display_meta_tags :site => 'TELEPHONE', :reverse => true %>
  
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= csrf_meta_tags %>
  
  <!-- FontAwesome For Social Media Buttons -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  
  <% if Rails.env == "production"  %>
  <script>
  // google tracking code, conditionally included only on production
  if ( window.location.host === "telephone.satellitecollective.org" ) {
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    
      ga('create', 'UA-39643648-2', 'auto');
      ga('send', 'pageview');
  }
  </script>
  <% end %>
  
</head>
<body class="<%= params[:controller] %>-<%= params[:action] %>">

<section class="main">
    <%= yield %>
</section>

